@model SignUpModel 

<div class="">
	<h3>SignUp</h3>
	<form class="" asp-action="SignUp" method="post">
		<div>
			<input type="text" asp-for="Username" required placeholder="Username" />
		</div>
		<div>
			<input type="password" asp-for="Password" required placeholder="Password" />
		</div>
		@if (!Model.IsValid)
		{
			<div>
				<span>the username already exists</span>
			</div>
		}
		<div>
			<p>do you already have an account?<a asp-action="Login">Click here</a></p>
		</div>
		<button>
			SignUp
		</button>
	</form>
</div>
